@{
    ViewData["Title"] = "Register";
}

<h1 style="margin-bottom:25px;margin-top:20px; text-align:center; text-decoration-style:double">@*@ViewData["Title"]*@Yeni kullanıcı kayıt</h1>

<div  @*class="row"*@ class="myDiv">
    <div class="col-md-12">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 style="margin-bottom:25px;margin-top:20px; text-align:center; text-decoration-style:double">Yeni Hesap Oluştur </h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Şifre</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Şifre Tekrar</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group"  style="text-align:center; margin-top:40px;">

                <button type="submit" class="btn btn-primary" style="border-radius:0px 0px; background-color:darkblue">Kayıt</button>
            </div>
            
        </form>
    </div>
