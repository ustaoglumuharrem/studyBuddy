@model IEnumerable<studyBuddy.Models.Pdf>
 
@{
    ViewData["Title"] = "Index";
}

<h1 style="margin-left:30px;margin-top:15px">Arşiv indir</h1>

<p>
    @*<a asp-action="Create">Create New</a>*@
</p>
<table class="table" style="background-color: lightcoral; border:3px outset black; border-radius:2px 2px;margin-left:30px" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResimYolu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Term)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResimYolu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Term.Name)
            </td>

            @*<td class="col-sm-2">
                Link:

            </td>*@


            <td class="col-sm-10">

                <a href="~/resimler/@Html.DisplayFor(modelItem => item.ResimYolu)">
                    İndir

                </a>

            </td>



            <td hidden>
                <a asp-action="Edit"  asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
